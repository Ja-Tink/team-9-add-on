{
    "manifest_version": 1,
    "name": "Tomato Clock",
    "version": "1.0",
    "description": "A Pomodoro timer extension for Firefox with two different sessions.",
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon.png"
      }
    },
    "permissions": []
  }
